{% extends 'base.html.twig' %}

{% block title %}Payments index{% endblock %}

{% block body %}
    <h1>Payments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Provider</th>
                <th>ProviderRef</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>Status</th>
                <th>PaidAt</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.provider }}</td>
                <td>{{ payment.providerRef }}</td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.currency }}</td>
                <td>{{ payment.status }}</td>
                <td>{{ payment.paidAt ? payment.paidAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ payment.createdAt ? payment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_payments_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('app_payments_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payments_new') }}">Create new</a>
{% endblock %}
